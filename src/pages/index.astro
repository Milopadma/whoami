---
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="mylodev">
  <main class="ml-4 mr-4 sm:ml-32 sm:mr-32 p-12 flex flex-col justify-center">
    <!-- intro section -->
    <div class="mt-60">
      <div class="relative right-12">
        <span class="text-blue-600 text-8xl">*</span>
        <span class="mt-8 text-8xl">Hello</span>
      </div>
      <p class="mt-8 text-4xl">I'm Mylo</p>
      <p class="mt-8 lg:text-4xl text-2xl">a web developer</p>
      <p class="lg:text-4xl text-2xl">from Bali, Indonesia.</p>
      <p class="lg:text-4xl text-2xl">currently in university,</p>
      <p class="lg:text-4xl text-2xl">
        studying <span class="font-bold">Computer Science</span>.
      </p>
    </div>
    <!-- showcase section -->
    <div class="mt-16">
      <h2 class="text-4xl">Here's some of my work;</h2>
      <!-- down arrow symbol thats always on the bottom of screen without position absolute-->
      <div class="flex flex-row justify-center items-center">
        <div class="mt-8">
          <svg
            id="arrow"
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6 animate-bounce relative bottom-0"
            fill="none"
            viewBox="0 0 24 24"
            stroke="blue"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
        </div>
      </div>

      <div class="mt-8 lg:flex flex-row">
        <Card
          image="/portfolio.png"
          title="mylo's portfolio"
          body="This website you're on right now!"
          href="https://portfolio.milopadma.com"
        />
        <Card
          image="/whatshouldieat.png"
          title="whatshouldieat"
          body="A simple web app to help you decide what to eat."
          href="https://whatshouldieat.milopadma.com/"
        />
        <Card
          image="/silentnightgame.png"
          title="silent night game"
          body="a unity game i made to teach people about a part of my culture."
          href="https://github.com/Milopadma/SilentNightGame/tree/main"
        />
      </div>
    </div>
  </main>
</Layout>
