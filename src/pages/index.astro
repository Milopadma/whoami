---
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="mylodev">
  <main class="flex-row justify-center items-center margin p-12">
    <!-- intro section -->
    <div class="text-4xl">
      <h1 class="mt-12 text-8xl relative right-12 bold">*Hello</h1>
      <h2 class="mt-8 text-4xl">I'm Mylo</h2>
      <p class="mt-8">a 20-year-old web developer</p>
      <p>from Bali, Indonesia.</p>
      <p>Currently in University studying Computer Science.</p>
    </div>
    <!-- showcase section -->
    <div class="mt-16">
      <h2 class="text-4xl">Here's some of my work;</h2>
      <div class="mt-8">
        <Card
          image="/portfolio.png"
          title="Mylo's Website"
          body="This website you're on right now!"
          href="https://portfolio.milopadma.com"
        />
        <Card
          image="/whatshouldieat.png"
          title="whatshouldieat"
          body="A simple web app to help you decide what to eat."
          href="https://whatshouldieat.milopadma.com/"
        />
        <Card
          image="/silentnightgame.png"
          title="silent night game"
          body="a unity game i made to teach people about a part of my culture."
          href="https://github.com/Milopadma/SilentNightGame/tree/main"
        />
      </div>
    </div>
  </main>
</Layout>
