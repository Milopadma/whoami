<script>
  //check the window height and place the element with id of "arrow" at the bottom of the page
  const arrow = document.getElementById("arrow");
  const windowHeight = window.innerHeight;
  if (arrow) {
    arrow.style.top = windowHeight - 980 + "px";
  }
</script>
