  // if (arrow) {
  //   arrow.style.top = windowHeight - 980 + "px";
  // }

  //find the aspect ratio of the window and set the height of the "arrow" element to match
  const arrow = document.getElementById("arrow");
  const windowWidth = window.innerWidth;
  const windowHeight = window.innerHeight;
  const aspectRatio = windowWidth / windowHeight;
  if (arrow) {
    arrow.style.top = aspectRatio * -2 + "vh";
  }
</script>
